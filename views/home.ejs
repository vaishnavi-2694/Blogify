<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Homepage</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100 text-gray-900">
    <%- include('./partials/nav') %>

    <div class="container mx-auto mt-6 px-4">
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        <% blogs.forEach(blog => { %>
        <div class="bg-white shadow-md rounded-lg overflow-hidden">
          <img src="<%= blog.coverImageURL %>" class="w-full h-48 object-cover">
          <div class="p-4">
            <h5 class="text-lg font-semibold"><%= blog.title %></h5>
            <a href="/blog/<%= blog._id %>" class="block mt-3 bg-blue-500 text-white text-center py-2 rounded hover:bg-blue-600 transition">
              View
            </a>
          </div>
        </div>
        <% }) %>
      </div>
    </div>

    <%- include('./partials/scripts') %>
  </body>
</html>
